{
  "name": "static-site-generator-minimum",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "16.14.2",
    "npm": "8.5.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "npm run clean && cross-env NODE_ENV=dev run-p dev:*",
    "dev:css": "postcss \"./src/**/!(_)*.css\" --base src --dir ./dist --ext css --watch",
    "dev:eleventy": "npx @11ty/eleventy --serve --incremental --watch",
    "build": "cross-env NODE_ENV=prod run-s build:*",
    "build:css": "postcss \"./src/**/!(_)*.css\" --base src --dir ./dist --ext css",
    "build:eleventy": "npx @11ty/eleventy",
    "debug": "DEBUG=* npx eleventy",
    "lint:prettier": "prettier --check --ignore-path .gitignore .",
    "lint:eslint": "eslint --ignore-path .gitignore . --ext .js",
    "fix:prettier": "prettier --write --ignore-path .gitignore .",
    "fix:eslint": "eslint --fix --ignore-path .gitignore . --ext .js"
  },
  "keywords": [],
  "author": "warugaki",
  "license": "MIT",
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "devDependencies": {
    "@11ty/eleventy": "1.0.1",
    "autoprefixer": "10.4.7",
    "cross-env": "7.0.3",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.14",
    "postcss-cli": "10.0.0",
    "postcss-import": "14.1.0",
    "prettier": "2.7.1",
    "rimraf": "3.0.2"
  }
}
